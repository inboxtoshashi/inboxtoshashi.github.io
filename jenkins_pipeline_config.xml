<!-- Add Git Infra Job -->
<flow-definition plugin="workflow-job@2.40">
  <actions/>
  <description>Clone Git Infra Repository</description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <definition class="org.jenkinsci.plugins.workflow.cps.CpsFlowDefinition" plugin="workflow-cps@2.90">
    <script>
      pipeline {
        agent any
        stages {
          stage('Git_Infra') {
            steps {
              sh "git clone https://github.com/inboxtoshashi/url_infra.git"
            }
          }
        }
      }
    </script>
    <sandbox>true</sandbox>
  </definition>
  <triggers/>
  <disabled>false</disabled>
</flow-definition>

